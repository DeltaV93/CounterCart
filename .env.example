# =============================================================================
# CounterCart Environment Variables
# Copy this file to .env.local and fill in the values
# =============================================================================

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/countercart"
DIRECT_URL="postgresql://user:password@localhost:5432/countercart"

# Supabase Auth
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Plaid (Banking API)
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret"
PLAID_ENV="sandbox"  # sandbox | development | production

# Every.org (Nonprofit/Donation API) - optional for basic functionality
EVERYORG_API_KEY=""
EVERYORG_WEBHOOK_TOKEN=""
EVERYORG_WEBHOOK_SECRET=""

# Stripe (Subscriptions)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_ID_PREMIUM=""

# Security
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET="your-32-char-minimum-encryption-secret-here"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3007"
NODE_ENV="development"
LOG_LEVEL="debug"

# Email (Resend) - optional, emails logged to console if not set
RESEND_API_KEY=""

# Internal API token for service-to-service auth (min 32 chars)
# Generate with: openssl rand -hex 32
INTERNAL_API_TOKEN=""

# Backend service URL (optional - webhooks process inline if not configured)
BACKEND_SERVICE_URL=""

# Error Monitoring (Sentry) - optional
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""

# Analytics (Fathom) - optional
NEXT_PUBLIC_FATHOM_SITE_ID=""
